    <section>
      <div class="container mt-5">
        <div class="row">

          {{#each products}}
          <div class="col-md-3 p-3">
            <div class="card" style="width: 15rem; height:24rem">
              <img  src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="Mobile-img" height="200px" >
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text"> {{this.description}}</p>
                <p class="card-text">Rs. {{this.Price}}</p>
                <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
              </div>
            </div>
          </div>
         {{/each}}

      </div>
     </div>
    </section>
          