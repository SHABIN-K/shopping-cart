<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td><img style="width: 70px; height: 70px;" src="/product-images/{{this._id}}.jpg" alt="product images">
                    </td>
                    <td>{{this.name}}</td>
                    <td>{{this.Price}}</td>
                    <td>
                        <button class="cart-item-count mr-3">-</button>1<button class="cart-item-count ml-3">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
         {{#unless products}}
          <div class="pt-5">
             <h3 class="text-center mt-5">Sorry !! No products Found</h3><br>
             <p class="text-center">click below button to Place order</p>
             <div class="text-center"><a href="/" class="btn btn-success">Place Order</a></div>
          </div>
         {{/unless}}       
    </div>
</section>