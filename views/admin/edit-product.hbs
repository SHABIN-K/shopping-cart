<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
              <h2 class="text-center">Edit Product</h2>
               <form action="/admin/edit-product/{{editProduct._id}}" enctype="multipart/form-data" method="post">
                 <div class="">
                   <label for="name" class="form-label">Name</label>
                   <input type="text"  name="name" class="form-control" value="{{editProduct.name}}" required>
                 </div>
                 <div class="">
                   <label for="category" class="form-label">Category</label>
                   <input type="text" name="category" class="form-control" value="{{editProduct.category}}" required>
                 </div>
                 <div class="">
                   <label for="Price" class="form-label">Price</label>
                   <input type="text" name="Price" class="form-control" value="{{editProduct.Price}}" required>
                 </div>
                 <div class="">
                   <label for="description" class="form-label">Description</label>
                   <input type="text" name="description" class="form-control" value="{{editProduct.description}}" required>
                 </div>
                 <div class="">
                   <label for="image" class="form-label">Image</label><br>
                   <img src="/product-images/{{editProduct._id}}.jpg" alt="item" style="width: 100px; height:100px;">
                   <input name="image" type="file"   class="form-control" required>
                 </div>
                 <div class="">
                   <button type="submit" class="btn btn-success mt-4">Submit</button>
                 </div>
               </form>
          </div>
       </div>
    </div>
</section>